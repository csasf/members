<p id="notice"><%= notice %></p>

<h1>Performance Set Instruments</h1>

<table>
  <thead>
    <tr>
      <th>Performance Set</th>
      <th>Instrument</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performance_set_instruments.each do |performance_set_instrument| %>
      <tr>
        <td><%= link_to performance_set_instrument.performance_set, performance_set_instrument.performance_set %></td>
        <td><%= performance_set_instrument.instrument %></td>
        <td><%= performance_set_instrument.limit.present? && performance_set_instrument.limit > 0 ? performance_set_instrument.limit : "none" %></td>
        <td><%= link_to 'Show', performance_set_instrument %></td>
        <td><%= link_to 'Edit', edit_performance_set_instrument_path(performance_set_instrument) %></td>
        <td><%= link_to 'Destroy', performance_set_instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

