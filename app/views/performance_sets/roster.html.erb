<div class='pageHeader'><h2>Roster for <%= @performance_set.extended_name %></h2></div>

<% @instrument_groups.each do |ig, i| %>
  <% j = 0 %>
  <h4><%= ig.capitalize %></h4>
  <% @instrument_groups[ig].each do |ms| %>
    <% if ms %>
      <% j += 1 %>
      <%= link_to ms, ms %><br>
    <% end %>
  <% end %>
  <i><%= "#{pluralize(j, ig)}" %></i>
<% end %>